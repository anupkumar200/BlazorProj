@page "/familyList"
@inject FamilyService Service


<div class="row mt-2">
    <div class="col-md-6">
        <h3 class="text-primary">Families List</h3>
    </div>
    <div class="col-md-6 text-end">
        <a class="btn btn-primary" role="button" href="/familyUpsert">Add Family</a>
    </div>
</div>
@if(family == null)
{
    <div class="text-center">
        <img src="/images/loading.gif" />
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Relation</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fami in family)
            {
                <tr>
                    <td>@fami.FamilyHeadId</td>
                    <td>@fami.Name</td>
                    <td>@fami.Age</td>
                    <td>@fami.Gender</td>
                    <td>@fami.Relation</td>
                    <td>@fami.Description</td>
                    <td>
                        <a class="btn btn-primary" href="@($"familyUpsert/{fami.FamilyHeadId}")"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger" href=""><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private Family[]? family;

    protected override void OnInitialized()
    {
        family = Service.GetFamily();
    }
}
